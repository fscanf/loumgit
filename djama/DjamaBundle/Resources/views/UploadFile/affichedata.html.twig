<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>affichage de donn√©es</title>
    <style>
#customers {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    width: 100%;
    border-collapse: collapse;
}

#customers td, #customers th {
    font-size: 1em;
    border: 1px solid #98bf21;
    padding: 3px 7px 2px 7px;
}

#customers th {
    font-size: 1.1em;
    text-align: left;
    padding-top: 5px;
    padding-bottom: 4px;
    background-color: #A7C942;
    color: #ffffff;
}

#customers tr.alt td {
    background-color: #EAF2D3;
}
</style>
    </head>
    <body>
        <h1>On djarama yo GS Kaloum</h1>
        <table style="width:100%">
            <thead>
                <tr>
                    <th><a href="http://www.sfloumka.dev/app_dev.php/chargement"><button>Annueller</button></a></th>
                    <th><a href="http://www.sfloumka.dev/app_dev.php/accueil"><button action= "{{path('djama_affichage')}}" >Sauvegardez</button></a>      </th>           
                </tr>
            </thead>
        </table>                    
        <br/>
        <div>
            {% for indice, titre in arrayClasseurTitre  %}
                {% if arrayChamps[titre] is defined %}
                   <table id="customers">
                        <caption> {{titre}} </caption>
                        <thead>
                            <tr>
                                {% for champ in arrayChamps[titre] %}
                                   <th height="30px"> {{champ}} </th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for datas in arrayData %}
                                {% set vrai = 'true' %} 
                                {% for data in datas %}
                                    {% if vrai is sameas ('true')  %} 
                                        <tr>
                                            {% for da in data %} 
                                                {% if da is not defined %}
                                                    <td> {{Vide}} </td>
                                                {% else %} 
                                                    <td> {{da|convert_encoding('UTF-8', 'ISO-8859-1')}} </td>
                                                {% endif %}
                                            {% endfor %}
                                        </tr>
                                        {% set vrai = 'false' %}
                                    {% else %} 
                                        <tr class="alt"> 
                                            {% for da in data %}
                                                {% if da is defined %}
                                                        <td > {{da|convert_encoding('UTF-8', 'ISO-8859-1')}} </td>
                                                {% endif %}
                                            {% endfor %}
                                        </tr>
                                        {% set vrai = 'true' %}
                                    {% endif %}
                                {% endfor %} 
                            {% endfor %}
                            </tbody>
                        </table>
                        <br/><br/><br/>
                {% endif %}
            {% endfor %}
        </div>
    </body>
</html>
{# empty Twig template #}
